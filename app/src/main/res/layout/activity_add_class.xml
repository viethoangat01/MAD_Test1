<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AddClassActivity">
    <TextView
        android:id="@+id/textview_addclass_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm lớp học"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_dark"
        android:textSize="25dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/edittext_addclass_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên..."
        android:layout_below="@+id/textview_addclass_header"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />
    <EditText
        android:id="@+id/edittext_addclass_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả..."
        android:layout_below="@+id/edittext_addclass_name"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <Button
        android:id="@+id/button_addclass_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:layout_below="@+id/edittext_addclass_desc"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>